<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/follow_topRelativeLayout_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#99FFC0CB"
        >
        
      <LinearLayout
           android:id="@+id/follow_topButtonLayout_ll"
           android:layout_centerInParent="true"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:layout_marginBottom="30dp"
            >
          
          <Button
              android:id="@+id/follow_recommend_bt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
              android:text="recommend "  
              android:background="@drawable/button_shape_not_onclick"
              android:textColor="#FFFFFFFF"/>
          
          <Button
              android:id="@+id/follow_follow_bt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="  follow  "
              android:layout_weight="0.5"
              android:background="@drawable/button_shape_onclicked"
              android:textColor="#99FFC0CB"/>
          
        </LinearLayout>        
       
    </RelativeLayout>
 
        
  
<ListView
       android:layout_below="@id/follow_topRelativeLayout_rl"
       android:id="@+id/follow_listView_lv"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        android:divider="#00000000" 
       android:dividerHeight="18dp"
       >
      </ListView>
    
    
</RelativeLayout>
