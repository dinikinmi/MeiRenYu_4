<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/prmLvItem_avatar_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
        />
    <TextView 
        android:id="@+id/prmLvItem_posterName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/prmLvItem_avatar_iv"
        android:text="User Name"
        />"
    
    <TextView
        android:id="@+id/prmLvItem_msgContent_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prmLvItem_avatar_iv"
        android:layout_below="@id/prmLvItem_posterName_tv"
        android:text="this is message content"/>

    
</RelativeLayout>
